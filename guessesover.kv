<GuessesOver>:
    opacity: 0
    canvas.before:
        Color:
            rgba: 220/255, 20/255, 60/255, 0.5
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height/2
        pos: root.pos[0], root.pos[1]
        spacing: 10
        padding: 10
    
        Label:
            font_name: "Fonts/Sackers-Gothic-Std-Light.ttf"
            text: "Out of Guesses"
            pos_hint: {"center_x": .5, "center_y": .7}
            size_hint: 0.9, 0.9
            font_size: self.size[1]/6
            outline_width: 10
            outline_colour: (0, 0, 0, 1)
        
        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Retry"
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint: 0.3, 0.2
            font_size: self.height/2
            background_normal: ''
            background_color: .3, .4, 1, .85
            on_press: root.parent.retry_game()
        
        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Main Menu"
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: 0.3, 0.2
            font_size: self.height/2.5
            background_normal: ''
            background_color: .3, .4, 1, .85
            on_press: root.parent.main_menu()
        
        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Quit"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: 0.3, 0.2
            font_size: self.height/2
            color: 0,0,0,1
            background_normal: ''
            background_color: 1, .3, .4, .85
            on_press: app.stop()