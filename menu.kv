
<Menu>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "Images/Alexandria-final.png"
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height/2
        pos: root.pos[0], root.pos[1]
        spacing: 10
        padding: 10
       
        Label:
            font_name: "Fonts/Sackers-Gothic-Std-Light.ttf"
            text: "Lock Picker"
            pos_hint: {"center_x": .5, "center_y": .7}
            size_hint: 0.9, 0.9
            font_size: self.size[1]/4
            outline_width: 10
            outline_colour: (0, 0, 0, 1)

        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Play"
            pos_hint: {"center_x": .5, "center_y": .4}
            size_hint: 0.3, 0.2
            background_normal: ''
            background_color: .3, .4, 1, .85
            font_size: self.height/ 2
            on_press: root.parent.on_press_play()
        
        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Tutorial"
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: 0.3, 0.2
            font_size: self.height/2
            background_normal: ''
            background_color: .3, .4, 1, .85
            on_press: root.parent.Tutorial()
        
        Button:
            font_name: "Fonts/Eurostile.ttf"
            text: "Quit"
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: 0.3, 0.2
            color: 0,0,0,1
            font_size: self.height/2
            background_normal: ''
            background_color: 1, .3, .4, .85
            on_press: app.stop()